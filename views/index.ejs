<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Space Explorer</title>
    <link rel="stylesheet" href="/styles/style.css" />
</head>
<body>
    <header>
        <h1>Space Explorer</h1>
    </header>

    <main>
        <!-- Astronomy Picture of the Day Section -->
        <section class="apod">
            <h2>Astronomy Picture of the Day</h2>
            <div class="apod-container">
                <img 
                src="<%= apod.url %>" 
                alt="<%= apod.title %>" 
                class="apod-image"
                />
                <div class="apod-details">
                    <h3><%= apod.title %></h3>
                    <p><%= apod.date %></p>      
                    <p><%= apod.explanation %></p>
                </div>
            </div>

            <!-- gallary of past images -->
            <div class="apod-gallery">
                <h3>Gallery: Past APODs</h3>
                <% pastApods.forEach(apod => { %>
                    <img 
                    src="<%= apod.url %>" 
                    alt="<%= apod.title %>" 
                    title="<%= apod.title %>" 
                    class="gallery-image"
                    onclick="openModal('<%= apod.url %>', '<%= apod.title %>')"
                    />
                <% }) %>

                <!-- Modal to show enlarged image -->
                <div id="imageModal" class="modal">
                    <span class="close" onclick="closeModal()">&times;</span>
                    <img class="modal-content" id="modalImage" />
                    <div id="caption"></div>
                </div>
        </div>
    </section>
    <!-- SpaceX launches section -->
    <section class="spacex">
        <h2>Upcoming SpaceX Launches</h2>
        <div class="next-launch">
            <h3>Next Launch: <%= nextLaunch.name %></h3>
            <p>Rocket: <%= nextLaunch.rocket %></p>
            <p>Launchpad: <%= nextLaunch.launchpad %></p>
            <p>Time:  <%= nextLaunch.date_utc %></p>
            <p>Details: <% nextLaunch.details || 'No details available'  %></p>
        </div>
        <div class="launch-list">
            <% upcomingLaunches.forEach(launch => { %>
            <div class="launch-card">
                <h4><%= launch.name %></h4>
                <p>Rocket: <%= launch.rocket%></p>
                <p>Launchpad: <%= launch.launchpad %></p>
                <p>Time: <%= launch.date_utc %></p>
                <p>Details: <%= launch.details || 'No details available'  %></p>
            </div>
        <% }) %>
        </div>              
    </section>
</main>
    <script src="/scripts/script.js"></script>
  </body>
</html>
